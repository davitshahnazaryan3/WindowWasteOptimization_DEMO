<DrawingSpace@RelativeLayout>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.5
        RoundedRectangle:
            pos: root.width/20, root.height/12
            size: root.width - root.width/10, root.height/2 - root.height/48
            radius: [20, ]

    canvas:
        Color:
            rgba: 1, 1, 1, 0.8

        RoundedRectangle:
            pos: root.width/10, root.height/10
            size: root.width - root.width/5, root.height/2 - root.height/20
            radius: [20, ]
